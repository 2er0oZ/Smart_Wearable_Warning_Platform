<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 读取外部存储权限，用于读取CSV文件 -->
    <!-- API 33 以上不需要 READ_EXTERNAL_STORAGE，但为了兼容性我们保留，并在运行时动态申请 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- API 31+ 如果访问管理范围外的文件需要 MANAGE_EXTERNAL_STORAGE，这里我们使用系统文件选择器，通常不需要，但为了保险起见 -->
    <!-- <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/smart_searable_warning_platform"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".StudentActivity" />
        <activity android:name=".AdminActivity" />

    </application>

</manifest>
